{"rules":{

  "roles":{
    ".read":"(auth != false)",
      ".write":"(root.child('usuarios').child(auth.uid).child('roles').val() == 'ADMIN')"},

  "usuarios":{
    ".read":"(auth != false)",
      ".write":"(root.child('usuarios').child(auth.uid).child('roles').val() == 'ADMIN')"},

  "convenios":{
    ".read":"true",
      ".write":"(root.child('usuarios').child(auth.uid).child('roles').val() == 'ADMIN')"},

  "convenios_inicio":{
    ".read":"(auth != false) && (root.child('usuarios').child(auth.uid).child('roles').val() != 'NIVEL2')",
      ".write":"(root.child('usuarios').child(auth.uid).child('roles').val() == 'ADMIN')"},

  "solicitudes":{
    ".read":"(auth != false)",
      ".write":"(auth != false)"},
      
  "renovaciones":{
    ".read":"(auth != false)",
      ".write":"(auth != false)"},

  "borradores":{
    ".read":"(auth != false)",
      ".write":"(auth != false)"},
      
  "investigaciones":{
    ".read":"(auth != false)",
      ".write":"(auth != false)"}

  }
}